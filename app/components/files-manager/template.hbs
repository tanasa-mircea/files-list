<div class="files-manager">
  <div class="files-table-control">
    <div class="files-table-control__select">
      <input id="selectAll"
        type="checkbox"
        checked={{this.selectAllCheckedState}}
        {{on "change" this.handleSelectAllClick}}
        {{did-insert this.handleSelectAllInserted}}/>

      <label for="selectAll">
        {{#if this.selectedCount}}
          Selected {{this.selectedCount}}
        {{else}}
          None selected
        {{/if}}
      </label>
    </div>
    <button class="files-table-control__download" type="button" {{on "click" this.downloadSelectedFiles}}>
      <img src="assets/download-button.svg" alt="Download icon">
      Download Selected
    </button>
  </div>

  <table class="files-table">
    <tr class="files-table__header">
      {{#each-in this.columnsConfig as |key column|}}
        <th class="files-table__cell" style="width: {{column.customWidth}}px">
          {{column.text}}
        </th>
      {{/each-in}}
    </tr>

    {{#each-in this.filesModelList as |rowId row|}}
      <tr class="files-table__row {{if row.isSelected "files-table__row--selected"}}" {{on "click" (fn this.toggleRowIsSelected rowId) }}>
        {{#each-in columnsConfig as |key column|}}
          <td class="files-table__cell">
            {{component
              column.component
              value=(get row column.dataKey)
              changeValue=(fn this.handleChangeRowCellValue rowId column.dataKey)
            }}
          </td>
        {{/each-in}}
      </tr>
    {{/each-in}}
  </table>
</div>